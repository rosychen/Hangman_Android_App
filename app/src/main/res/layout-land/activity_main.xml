                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/O"
                android:textSize="14dip"
                android:onClick="goGuess"/>
            <Button
                android:id="@+id/P"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/P"
                android:textSize="14dip"
                android:onClick="goGuess"/>
            <Button
