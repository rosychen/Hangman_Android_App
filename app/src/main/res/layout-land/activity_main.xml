                android:id="@+id/B"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/B"
                android:textSize="14dip"
                android:onClick="goGuess"/>
