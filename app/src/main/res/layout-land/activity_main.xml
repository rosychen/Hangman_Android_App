                android:id="@+id/A"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/A"
                android:textSize="14dip"
                android:onClick="goGuess"/>
